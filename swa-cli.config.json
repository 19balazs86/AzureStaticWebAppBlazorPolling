{
  "$schema": "https://aka.ms/azure/static-web-apps-cli/schema",
  "Configure-Azure-SWA-CLI": "https://learn.microsoft.com/en-us/azure/static-web-apps/static-web-apps-cli-configuration",
  "configurations": {
    "swa-blazor-polling": {
      "appLocation": "Client",
      "apiLocation": "Api",
      "outputLocation": "bin\\wwwroot",
      "appBuildCommand": "dotnet publish -c Release -o bin",
      "apiBuildCommand": "dotnet publish -c Release",
      "run": "dotnet watch run",
      "appDevserverUrl": "http://localhost:5000"
    }
  }
}